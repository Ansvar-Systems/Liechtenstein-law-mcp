{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Liechtenstein Law MCP",
  "description": "Golden contract tests for the Liechtenstein Law MCP -- 12 tests covering article retrieval, search, citation, cross-reference, and negative cases",
  "tests": [
    {
      "id": "li-001",
      "category": "article_retrieval",
      "description": "Retrieve data protection law Article 1 -- scope and purpose",
      "tool": "get_provision",
      "input": {
        "document_id": "li-datenschutzgesetz",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["data", "protection", "personal"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "li-002",
      "category": "article_retrieval",
      "description": "Retrieve cybersecurity/cybercrime law Article 1 -- scope",
      "tool": "get_provision",
      "input": {
        "document_id": "li-cybersicherheitsgesetz",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["cyber", "security", "information", "crime"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "li-003",
      "category": "article_retrieval",
      "description": "Retrieve data protection law Article 2 -- definitions",
      "tool": "get_provision",
      "input": {
        "document_id": "li-datenschutzgesetz",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "li-004",
      "category": "search",
      "description": "Full-text search for 'personal data' returns relevant provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["personal data", "data protection", "data subject"]
      }
    },
    {
      "id": "li-005",
      "category": "search",
      "description": "Full-text search for 'cybersecurity' returns relevant provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybersecurity"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "li-006",
      "category": "search",
      "description": "Full-text search for 'electronic' returns e-commerce or e-signature provisions",
      "tool": "search_legislation",
      "input": {
        "query": "electronic"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "li-007",
      "category": "citation_roundtrip",
      "description": "Citation for data protection law includes URL pattern",
      "tool": "get_provision",
      "input": {
        "document_id": "li-datenschutzgesetz",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "li-008",
      "category": "metadata",
      "description": "list_sources returns metadata for Liechtenstein law data",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["LI"]
      }
    },
    {
      "id": "li-009",
      "category": "eu_cross_reference",
      "description": "Cross-reference to EU GDPR for data protection law",
      "tool": "get_provision_eu_basis",
      "input": {
        "document_id": "li-datenschutzgesetz",
        "provision_ref": "art1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["GDPR", "General Data Protection Regulation", "2016/679"]
      }
    },
    {
      "id": "li-010",
      "category": "negative_test",
      "description": "Non-existent law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "fictional-law-2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "li-011",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "li-datenschutzgesetz",
        "section": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "li-012",
      "category": "list_sources",
      "description": "list_sources returns metadata including jurisdiction",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["LI"]
      }
    }
  ]
}
